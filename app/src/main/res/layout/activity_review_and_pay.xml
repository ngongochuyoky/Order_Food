<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ReviewAndPayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#fff"
            android:background="#F6442E">
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6442E"
            android:text="Xem lại và thanh toán"
            android:textColor="#fff"
            android:textSize="26sp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/robotocondensed_regular"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà hàng Ngọc Huy Oky"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/robotocondensed_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mở cửa từ 6h sáng - 10h đêm"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E2E5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thống kê giá"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E2E5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:textColor="#9F000000"
                android:paddingLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền sản phẩm"/>
            <TextView
                android:id="@+id/txtTotal"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:text="20000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:textColor="#9F000000"
                android:paddingLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá ship"/>
            <TextView
                android:id="@+id/txtShip"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:text="20000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:paddingLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền"/>
            <TextView
                android:id="@+id/txtTotalAll"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:text="20000"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:textColor="#fff"
        android:id="@+id/btnConfirm"
        android:text="Xác nhận thông tin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/btn_thanh_toan"/>
</LinearLayout>