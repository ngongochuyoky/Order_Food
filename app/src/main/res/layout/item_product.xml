<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:elevation="10dp"
    android:padding="3dp"
    android:background="@drawable/shadows"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgItemProduct"

                android:src="@drawable/list1"/>
            <TextView
                android:id="@+id/txtItemProduct"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Bánh Kem"
                android:layout_below="@+id/imgItemProduct"
                android:layout_marginLeft="3dp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#000"
                android:textSize="20sp"


                />
            <TextView
                android:id="@+id/txtDes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text=" Để default thì ImageView trong android không có border radius."
                android:layout_below="@+id/txtItemProduct"
                android:layout_marginLeft="3dp"
                android:padding="4dp"
                android:layout_marginTop="1dp"
                android:textColor="#B0000000"
                android:textSize="10sp"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#050505"
                android:layout_below="@+id/txtDes"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_below="@+id/txt">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_baseline_attach_money_24"/>
                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="1dp"
                    android:text="20000 đồng"
                    android:textStyle="bold"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/addCart"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/plus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:text="Thêm"
                    android:textColor="#ED3A0D"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
