<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".TypeProductActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBack1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/imgProduct1"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pizza">
                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/radius"
                    >
                    //cum 1
                    <LinearLayout
                        android:layout_marginTop="170dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:orientation="vertical"
                        android:background="@drawable/background_white">
                        <TextView
                            android:id="@+id/txtName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            android:fontFamily="@font/oswald_semibold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nhà hàng Huy Oky"
                            android:textColor="#1AE122"
                            android:textSize="11sp"
                            android:fontFamily="@font/oswald_semibold"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tổ 4, Thôn Hòa Phát, xã Hòa Phú, Hòa Vang, Đà Nẵng"
                            android:textSize="11sp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:gravity="center"/>
                        //duong ke ngang
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="#A1000000"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đặt hàng tối thiểu 120.000 nghìn đồng"
                            android:textSize="11sp"
                            android:fontFamily="@font/robotocondensed_regular"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="#A1000000"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thanh toán tại nhà khi giao hàng"
                                android:textSize="11sp"
                                android:layout_marginBottom="4dp"
                                android:fontFamily="@font/robotocondensed_regular"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="20dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:layout_alignParentRight="true"
                                android:textSize="10sp"

                                android:textColor="#fff"
                                android:background="#0C470F"/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
                //List Product
            </RelativeLayout>
            //List Product
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_semibold"
                android:textSize="16sp"
                android:text="Danh sách món ăn"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_viewListProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>